#!/usr/bin/env bash
set -euo pipefail

# fulab-session-import-fubar: Import fubar events into a lab session file
# Usage:
#   fulab-session-import-fubar --session-id ID [--lab-root PATH] [--events-path PATH]

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
LAB_DEPS='{}'

usage() {
  echo "Usage: fulab-session-import-fubar --session-id ID [--lab-root PATH] [--events-path PATH]"
}

SESSION_ID=""
LAB_ROOT="$ROOT/lab"
EVENTS_PATH="$ROOT/resources/fubar-events.edn"

while [[ $# -gt 0 ]]; do
  case "$1" in
    --session-id)
      SESSION_ID="$2"; shift 2;;
    --lab-root)
      LAB_ROOT="$2"; shift 2;;
    --events-path)
      EVENTS_PATH="$2"; shift 2;;
    --help|-h)
      usage; exit 0;;
    *)
      echo "Unknown option: $1" >&2
      usage; exit 1;;
  esac
done

clojure -Sdeps "$LAB_DEPS" -M "$ROOT/dev/lab-import-fubar.clj" \
  --session-id "$SESSION_ID" \
  --lab-root "$LAB_ROOT" \
  --events-path "$EVENTS_PATH"
