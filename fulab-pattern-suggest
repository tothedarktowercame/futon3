#!/usr/bin/env bash
set -euo pipefail

# fulab-pattern-suggest: Draft a PSR from session context
# Usage:
#   fulab-pattern-suggest --session-id ID --decision-id DECISION

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
LAB_DEPS='{}'

usage() {
  echo "Usage: fulab-pattern-suggest --session-id ID --decision-id DECISION [--print-only]"
  echo "Writes an unverified PSR draft event based on session context."
}

SESSION_ID=""
SESSION_FILE=""
LAB_ROOT="$ROOT/lab"
REPO_ROOT="$ROOT"
DECISION_ID=""
PRINT_ONLY=false

while [[ $# -gt 0 ]]; do
  case "$1" in
    --session-id)
      SESSION_ID="$2"; shift 2;;
    --session-file)
      SESSION_FILE="$2"; shift 2;;
    --lab-root)
      LAB_ROOT="$2"; shift 2;;
    --repo-root)
      REPO_ROOT="$2"; shift 2;;
    --decision-id)
      DECISION_ID="$2"; shift 2;;
    --print-only)
      PRINT_ONLY=true; shift;;
    --help|-h)
      usage; exit 0;;
    *)
      echo "Unknown option: $1" >&2
      usage; exit 1;;
  esac
done

clojure -Sdeps "$LAB_DEPS" -M "$ROOT/dev/lab-pattern-suggest.clj" \
  ${SESSION_ID:+--session-id "$SESSION_ID"} \
  ${SESSION_FILE:+--session-file "$SESSION_FILE"} \
  --lab-root "$LAB_ROOT" \
  --repo-root "$REPO_ROOT" \
  ${DECISION_ID:+--decision-id "$DECISION_ID"} \
  $(if $PRINT_ONLY; then echo --print-only; fi)
