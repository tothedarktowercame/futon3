#!/usr/bin/env bash
set -euo pipefail

# fulab-pattern-demo: Create PSR/PUR draft templates for a blast-radius micro-mission
# Usage:
#   fulab-pattern-demo [--session-id ID] [--decision-id ID] [--lab-root PATH]

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}" )" && pwd)"
LAB_DEPS='{}'

usage() {
  echo "Usage: fulab-pattern-demo [--session-id ID] [--decision-id ID] [--lab-root PATH]"
}

SESSION_ID=""
DECISION_ID=""
LAB_ROOT="$ROOT/lab"

while [[ $# -gt 0 ]]; do
  case "$1" in
    --session-id)
      SESSION_ID="$2"; shift 2;;
    --decision-id)
      DECISION_ID="$2"; shift 2;;
    --lab-root)
      LAB_ROOT="$2"; shift 2;;
    --help|-h)
      usage; exit 0;;
    *)
      echo "Unknown option: $1" >&2
      usage; exit 1;;
  esac
done

clojure -Sdeps "$LAB_DEPS" -M "$ROOT/dev/lab-pattern-demo.clj" \
  ${SESSION_ID:+--session-id "$SESSION_ID"} \
  ${DECISION_ID:+--decision-id "$DECISION_ID"} \
  --lab-root "$LAB_ROOT"
