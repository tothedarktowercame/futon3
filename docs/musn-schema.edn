{:session/create {:req [:client] :opt [:session/id :policy :lab/root] :description "Register a MUSN session; returns policy and session-id."}
 :turn/start {:req [:session/id :turn] :opt [:hud] :description "Open a turn; returns allowed patterns, AIF scores, trail limits."}
 :turn/plan {:req [:session/id :turn :plan] :description "Record plan text for the turn."}
 :turn/select {:req [:session/id :turn :candidates :chosen :reason] :opt [:anchors] :description "Select a pattern (PSR) with reason and optional anchors."}
 :turn/action {:req [:session/id :turn :pattern/id :action] :opt [:note :files :source :cost] :description "Register a pattern action (read/implement/update/off-trail/wide-scan)."}
 :turn/use {:req [:session/id :turn :pattern/id] :opt [:anchors :note :inferred?] :description "Emit a PUR for the pattern used."}
 :evidence/add {:req [:session/id :turn :pattern/id :files :note] :description "Append evidence for a pattern."}
 :turn/end {:req [:session/id :turn] :description "Close the turn; server may pause/halt if constraints fail."}
 :turn/resume {:req [:session/id :turn] :opt [:note] :description "Clear halt/pause and resume the turn with a note."}
 :pause/event {:req [:session/id :turn :reason] :description "Server-issued pause with backtrace when constraints or budgets fail."}}
